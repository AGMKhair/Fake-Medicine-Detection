<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="153dp"
        android:layout_height="143dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.086">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/message_show_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:text= "Now You Sell This Product" />

        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Product Name : "
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/product_name_show"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Napa "
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp"
                android:gravity="start" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Country Name : "
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/product_country_show"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Bangladesh "
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp"
                android:gravity="start" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/company_name"
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/product_company_show"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Beximco"
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp"
                android:gravity="start" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mfg. Date  : "
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/product_Mfg_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="20-09-2018"
                android:textAlignment="textStart"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exp Date :"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/product_Exp_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="20-09-2019"
                android:textAlignment="textStart"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

        </LinearLayout>
